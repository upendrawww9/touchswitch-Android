<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/text_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:text="Device "
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/text_device_id">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSwitchTimer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_view_gb"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"

                    android:elevation="@dimen/_5sdp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/imgControl"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/dashimg"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textControl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="start"

                            android:text="@string/led_control"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgControl"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/viewLineControl"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/dark_gray"
                            app:layout_constraintTop_toBottomOf="@+id/textControl" />

                        <ImageView
                            android:id="@+id/imgSwitch"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/ic_switch_off"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineControl" />

                        <TextView
                            android:id="@+id/textStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="@string/led_status"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/imgSwitch"
                            app:layout_constraintRight_toLeftOf="@+id/imgSwitchBulb"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineControl" />

                        <TextView
                            android:id="@+id/textStatusValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                           android:text="@string/led_off"

                            android:textColor="@color/red"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/imgSwitch"
                            app:layout_constraintRight_toLeftOf="@+id/imgSwitchBulb"
                            app:layout_constraintTop_toBottomOf="@+id/textStatus" />

                        <ImageView
                            android:id="@+id/imgSwitchBulb"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_led_off"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/viewLineControl" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSpinner"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/white1"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/textColorWheel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/led_wheel"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/imgSwitch"
                        app:layout_constraintRight_toLeftOf="@+id/imgSwitchBulb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/offled"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ledoff" />

                    <com.flask.colorpicker.ColorPickerView
                        android:id="@+id/color_picker_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alphaSlider="true"
                        app:density="20"
                        app:lightnessSlider="true"
                        app:wheelType="FLOWER"
                        app:lightnessSliderView="@+id/v_lightness_slider"
                        app:alphaSliderView="@+id/v_alpha_slider"
                        />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardScheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/card_view_gb"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"

                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textColorScheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/led_scheme"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/imgSwitch"
                            app:layout_constraintRight_toLeftOf="@+id/imgSwitchBulb"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:background="@color/white1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:drawSelectorOnTop="true"

                            android:gravity="center"
                            android:spinnerMode="dialog"


                            />

                               <TextView
                                android:id="@+id/textSpeed"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                  android:layout_below="@+id/spinner"
                                android:textStyle="bold"
                                android:text="@string/led_speed"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/viewLine"
                                />
                            <TextView
                                android:id="@+id/textspeedinfo"
                                android:layout_width="200dp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_height="20dp"
                                android:layout_marginStart="@dimen/_100sdp"
                                android:text="@string/led_brightness_info"
                                app:layout_constraintStart_toEndOf="@+id/textSpeed"

                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/viewLine" />



                            <SeekBar
                                android:id="@+id/seekBarspeed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_marginBottom="@dimen/_9sdp"
                                android:max="40"
                                android:progress="1"
                                android:progressTint="@color/colorPrimary"
                                android:thumb="@drawable/seek_bar_thumb"
                                android:thumbTint="@color/colorPrimaryDark" />

                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMatrix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/card_view_gb"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp">



                            <TextView
                                android:id="@+id/textProgress"
                                android:layout_width="200dp"
                                android:layout_height="29dp"
                                android:textStyle="bold"
                                android:text="@string/led_brightness"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/viewLine"
                                />
                            <TextView
                                android:id="@+id/textProgress_info"
                                android:layout_width="200dp"
                                android:textStyle="bold"
                                android:layout_height="29dp"
                                android:layout_marginStart="@dimen/_100sdp"
                                android:text="@string/led_brightness_info"
                                app:layout_constraintStart_toEndOf="@+id/textProgress"

                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/viewLine" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <SeekBar
                                android:id="@+id/seekBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:max="100"
                                android:progress="10"
                                android:progressTint="@color/colorPrimary"
                                android:thumb="@drawable/seek_bar_thumb"
                                android:thumbTint="@color/colorPrimaryDark" />

                        </LinearLayout>
                        <GridLayout
                            android:id="@+id/gl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:columnCount="4"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/i0"
                                android:layout_columnSpan="4"
                                android:background="@drawable/shape"
                                android:layout_gravity="fill"
                                android:onClick="onClick"

                                android:text="" />

                            <Button
                                android:id="@+id/i1"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/red"
                                android:onClick="onClick"
                                android:text="" />

                            <Button
                                android:id="@+id/i2"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/green"
                                android:text="" />

                            <Button
                                android:id="@+id/i3"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/blue"
                                android:text="" />

                            <Button
                                android:id="@+id/i4"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/orange"
                                android:text="" />

                            <Button
                                android:id="@+id/i5"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/lightgreen"
                                android:text="" />

                            <Button
                                android:id="@+id/i6"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/lightblue"
                                android:text="" />

                            <Button
                                android:id="@+id/i7"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/amber"
                                android:text="" />

                            <Button
                                android:id="@+id/i8"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/cyan"
                                android:text="" />

                            <Button
                                android:id="@+id/i9"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/purple"
                                android:text="" />

                            <Button
                                android:id="@+id/i10"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/yellow"
                                android:text="" />

                            <Button
                                android:id="@+id/i12"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/white"
                                android:text="" />

                            <Button
                                android:id="@+id/i11"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="1dp"
                                android:background="@color/pink"
                                android:text="" />



                            <Button
                                android:id="@+id/cplus"
                                android:layout_columnSpan="4"
                                android:layout_gravity="fill"
                                android:layout_marginTop="10dp"
                                android:background="@color/black"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:text="Color +" />

                            <Button
                                android:id="@+id/cminus"
                                android:layout_columnSpan="4"
                                android:layout_gravity="fill"
                                android:textColor="@color/white"
                                android:background="@color/black"
                                android:text="Color -" />

                        </GridLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>