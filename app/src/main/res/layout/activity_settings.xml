                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:clickable="true"
                    android:elevation="@dimen/_5sdp"
                    android:foreground="?android:attr/selectableItemBackground"
